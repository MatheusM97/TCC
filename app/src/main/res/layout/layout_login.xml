<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_login"
        android:text="CPF"
        android:textColor="#000000"
        android:textStyle="normal"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        ></TextView>

    <EditText
        android:id="@+id/et_login"
        android:layout_below="@+id/tv_login"
        android:textColor="#000000"
        android:textStyle="normal"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:singleLine="true"
        android:inputType="number"
        ></EditText>

    <TextView
        android:id="@+id/tv_senha"
        android:layout_below="@+id/et_login"
        android:text="Senha"
        android:textColor="#000000"
        android:textStyle="normal"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        ></TextView>

    <EditText
        android:id="@+id/et_senha"
        android:layout_below="@+id/tv_senha"
        android:textColor="#000000"
        android:textStyle="normal"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:singleLine="true"
        android:inputType="textPassword"
        ></EditText>



    <Button
        android:id="@+id/btn_login"
        android:layout_below="@+id/et_senha"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/btn_finalizar"
        android:text="Acessar"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="normal"
        ></Button>


    <Button
        android:id="@+id/btn_relatorios"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/btn_cancelar"
        android:text="RelatÃ³rios"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:textStyle="normal"
        ></Button>


    <TextView
        android:id="@+id/tv_login_novo"
        android:text="Novo por aqui?"
        android:layout_above="@+id/btn_registrar_se"
        android:textStyle="normal"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        ></TextView>

    <Button
        android:id="@+id/btn_registrar_se"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="10dp"
        android:textStyle="normal"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:text="Criar conta"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_cancelar"
        />

</RelativeLayout>