<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F0F0F0"
    android:id="@+id/layout_1">

    <TextView
        android:id="@+id/tv_dtAtendimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tv_dataAtendimentoView"
        android:gravity="left"
        android:padding="3dp"
        android:text="Data"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_dataAtendimentoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:padding="3dp"
        android:text="${01/01/2000}"
        android:textSize="18dp"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/tv_horaAtendimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="right"
        android:layout_toRightOf="@+id/tv_dataAtendimentoView"
        android:padding="3dp"
        android:text="${00:00}"
        android:textSize="18dp"
        android:textStyle="normal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dataAtendimentoView"
        android:orientation="vertical"
        android:id="@+id/layout_2">

    <TextView
        android:id="@+id/tv_atendimento_atendido"
        android:layout_below="@+id/tv_dataAtendimentoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Tipo de atendimento:"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="normal">
    </TextView>

    <Spinner
        android:id="@+id/sp_atendido"
        android:layout_below="@+id/tv_atendimento_atendido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:spinnerMode="dialog">
    </Spinner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/layout_3">

        <TextView
            android:id="@+id/tv_tipo_documento"
            android:layout_below="@id/tv_atendimento_atendido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Tipo de documento:"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="normal">
        </TextView>

        <Spinner
            android:id="@+id/sp_tipoDocumento"
            android:layout_below="@id/sp_atendido"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_tipo_documento"
            android:spinnerMode="dialog">
        </Spinner>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/layout_4">

        <TextView
            android:focusable="false"
            android:id="@+id/tv_documento"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Documento:"
            android:layout_marginTop="1dp"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="normal">
        </TextView>

        <EditText
            android:id="@+id/et_cpfAtendimento"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_documento"
            android:textColor="#000000"
            android:textStyle="normal"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:inputType="number"
            android:imeOptions="actionNext"
            ></EditText>

        <EditText
            android:id="@+id/et_cnpjAtendimento"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_documento"
            android:textColor="#000000"
            android:textStyle="normal"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:visibility="invisible"
            ></EditText>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/layout_5">

        <TextView
            android:focusable="false"
            android:id="@+id/tv_atendido_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Nome:          "
            android:paddingBottom="0dp"
            android:paddingTop="11dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="normal">
        </TextView>

        <EditText
            android:id="@+id/et_nome"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_atendido_nome"
            android:textColor="#000000"
            android:textStyle="normal"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            ></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/layout_6">

        <TextView
            android:focusable="false"
            android:id="@+id/tv_telefone"
            android:layout_below="@id/et_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Telefone:     "
            android:paddingBottom="0dp"
            android:paddingTop="15dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="normal">
        </TextView>

        <EditText
            android:id="@+id/et_telefone"
            android:layout_below="@id/et_nome"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_telefone"
            android:textColor="#000000"
            android:textStyle="normal"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:inputType="number"
            ></EditText>

    </LinearLayout>

    <CheckBox
        android:id="@+id/ctv_atendimentoConclusivo"
        android:layout_below="@+id/et_telefone"
        android:text="Atendimento foi conclusivo"
        android:textStyle="normal"
        android:textSize="20dp"
        android:checked="true"
        android:button="@null"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:paddingBottom="2dp"/>

        <ListView
            android:id="@+id/lv_atendimento_tipo"
            android:layout_below="@+id/atendimentoOutro"
            android:layout_above="@id/btn_finalizarAtendimento"
            android:layout_marginBottom="98dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F0F0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingBottom="50dp"
        android:id="@+id/layout_7">

        <TextView
            android:id="@+id/atendimentoOutro"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textSize="18dp"
            android:paddingTop="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:text="Outro:">
        </TextView>

        <EditText
            android:id="@+id/atendimentoTipoOutro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textStyle="normal"
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp">
        </EditText>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/atendimento_layout_btn"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_finalizarAtendimento"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/btn_finalizar"
            android:text="concluir"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>
    </RelativeLayout>

</RelativeLayout>