<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_dtAtendimento"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:text="Data"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_dtView"
        android:layout_below="@+id/tv_dtAtendimento"
        android:gravity="center_horizontal"
        android:text="${new Date()}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="dialogDataAtendimento"
        />

    <ListView
        android:id="@+id/lv_atendimento_tipo"
        android:layout_below="@+id/tv_dtView"
        android:layout_above="@id/btn_finalizarAtendimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btn_finalizarAtendimento"
        android:layout_alignParentBottom="true"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp"
        android:background="@drawable/btn_finalizar"
        android:text="Finalizar"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        />

